        function loadData() {
            $.ajax({
                url: "/Members/List",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + item.Id + '</td>';
                        html += '<td>' + item.MemberName + '</td>';
                        html += '<td>' + item.Height + '</td>';

                        html += '<td>' + item.MemberWeight + '</td>';
                        var Sdate = new Date(parseInt(item.Start_Date.substr(6)));
                        html += '<td>' + Sdate.getFullYear() + "-" + (Sdate.getMonth() + 1) + "-" + Sdate.getDate() + '</td>';

                        var date = new Date(parseInt(item.End_Date.substr(6)));
                        html += '<td>' + date.getFullYear() + "-" + (date.getMonth() + 1) + "-" + date.getDate() + '</td>';
                        /*html += '<td>' + item.SubscriptionName + '</td>';*/

                        html += '<td>' + item.CategoryName + '</td>';
                        html += '<td>' + item.PhoneNumber + '</td>';
                        //html += '<td>' + item.GenderName + '</td>';
                        html += '<td>' + item.SubscriptionPrice + '</td>';
                        html += '<td>' + item.Paid + '</td>';
                        html += '<td>' + item.SubscriptionPriceDiscount + '</td>';
                       


                      
                        html += '<td>' + item.Notes + '</td>';

                        html += '<td><a class="btn btn-warning " style="border-radius:3px;" href="#" onclick="return getbyID(' + item.Id + ')"><i style="color:black;font-size:large;" title="تعديل" class="fa fa-pencil"></i></a>'
                        html += '<td><a class="btn btn-danger " style="border-radius:3px;" href="#" onclick="Delele(' + item.Id + ')">  <i style="color:white;font-size:large;"  title="حذف"  class="fa fa-trash-o" aria-hidden="true"></i></a ></td > '

                        html += '<td> <Form action="/Members/PrintDataRDLCById/' + item.Id + '" method="post"> <button formtarget="_blank" type="submit" class="btn btn-primary" style="border-radius:3px;" title="طباعة" style=" "><i style="color:white;font-size:large;"  class="fa fa-print" aria-hidden="true"></i></button></Form> </td>';

                        html += '</tr>';
                    });
                    $('.tbody').html(html);
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
        function Add() {

            var res = validate();
            if (res == false) {
                return false;
            }
            var empObj = {
                Id: $('#ID').val(),
                MemberName: $('#MemberName').val(),
                Height: $('#Height').val(),
                PhoneNumber: $('#PhoneNumber').val(),
                GenderTypeId: $('#GenderTypesId').val(),
                MemberWeight: $('#MemberWeight').val(),

                //Start_Date: $('#Start_Date').val(),
                CategoryId: $('#CategoriesId').val(),
                SubscriptionId: $('#SubscriptionsId').val(),
                SubscriptionPrice: $('#SubscriptionPrice').val(),
                SubscriptionPriceDiscount: $('#SubscriptionPriceDiscount').val(),

                Notes: $('#Notes').val(),
                Paid: $('#Paid').val(),



                //    Country: $('#Country').val()
            };
            $.ajax({
                url: "/Members/Add",
                data: JSON.stringify(empObj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    loadData();

                    $('#myModal').modal('hide');
                    Swal.fire(
                        'Good job!',
                        'You clicked the button!',
                        'success'
                    )
                },
              
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
        function getbyID(Id) {
            $('#MemberName').css('border-color', 'lightgrey');
            $('#Height').css('border-color', 'lightgrey');

            $('#MemberWeight').css('border-color', 'lightgrey');
            $('#PhoneNumber').css('border-color', 'lightgrey');
            $('#GenderTypesId').css('border-color', 'lightgrey');


            //$('#Start_Date').css('border-color', 'lightgrey');
            $('#Notes').css('border-color', 'lightgrey');
            $('#Paid').css('border-color', 'lightgrey');

            $('#SubscriptionPrice').css('border-color', 'lightgrey');

            $('#SubscriptionPriceDiscount').css('border-color', 'lightgrey');


            $('#CategoriesId').css('border-color', 'lightgrey');

            $('#SubscriptionId').css('border-color', 'lightgrey');
            //$('#Country').css('border-color', 'lightgrey');
            $.ajax({
                url: "/Members/getbyID/" + Id,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    $('#ID').val(result.Id);
                    $('#MemberName').val(result.MemberName);
                    $('#Height').val(result.Height);
                    $('#MemberWeight').val(result.MemberWeight);
                    $('#PhoneNumber').val(result.PhoneNumber);
                    $('#GenderTypesId').val(result.GenderTypeId);


                    //$('#Start_Date').val(result.Start_Date);
