                    $('#Paid').val(result.Paid);

                    $('#SubscriptionPrice').val(result.SubscriptionPrice);
                    $('#SubscriptionPriceDiscount').val(result.SubscriptionPriceDiscount);
                    $('#CategoriesId').val(result.CategoryId);
                    $('#SubscriptionsId').val(result.SubscriptionId);
                    //$('#Country').val(result.Country);
                    $('#myModal').modal('show');
                    $('#btnUpdate').show();
                    $('#btnAdd').hide();
                },
